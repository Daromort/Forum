@using Forum_Management_System.Models.View
@model UserViewModelMini

<div style="font-size: 12px; line-height: 1.2; width: 100%; height: 100%; display: flex; flex-direction: row; align-items: center;">
    <div style="flex: 1;">
        <div>
            @Model.Username
        </div>
        <div>
            <span style="font-size: 12px;">@Model.Karma Karma</span>
        </div>
    </div>
    @if (!string.IsNullOrEmpty(Model.Photo))
    {
        <div style="width: 30px; height: 30px; margin-left: 10px; border-radius: 50%; overflow: hidden;">
            @if (!string.IsNullOrEmpty(Model.Photo))
            {
                <img src="data:image/png;base64, @Model.Photo" alt="Image" style="width: 100%; height: 100%; object-fit: cover;" />
            }
            else
            {
                <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" alt="avatar" style="width: 100%; height: 100%; object-fit: cover;" />
            }
        </div>
    }
</div>