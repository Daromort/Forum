@using System.Security.Claims;
@{
    if (User.Identity.IsAuthenticated)
    {
        var adminClaim = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role);
        if (adminClaim != null && adminClaim.Value == "Admin")
        {
            Layout = "_AdminLayout";
        }
        else
        {
            Layout = "_MemberLayout";
        }
    }
    else
    {
        Layout = "_GuestLayout";
    }
    @RenderBody();
}
<script>
    function updateURLParameter(param, value) {
        parameters[param] = value;
        if (param == 'search') {
            parameters['page'] = 1;
        }
        console.log(parameters); //troubleshoot
        var url = new URL(window.location.href);
        if (value) {
            url.searchParams.set(param, value);
        } else {
            // Remove the param entirely if the value is an empty string.
            url.searchParams.delete(param);
        }
        history.pushState({}, '', url);
    }
</script>
