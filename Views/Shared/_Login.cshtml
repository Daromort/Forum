@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Forum_Management_System.Models.View
@model LoginViewModel
<html>
    <head>

    </head>
<body>
<style>
    .login-section {
        height: 100vh;
    }

    .login-container {
        padding-top: 3rem;
        padding-bottom: 3rem;
        background-color: #212529;
        color: #fff;
        text-align: center;
    }

    .login-header {
        font-weight: bold;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
    }

    .login-description {
        opacity: 0.5;
        margin-bottom: 3rem;
    }

    .login-input {
        display: block;
        width: 100%;
        height: calc(1.5em + 0.75rem + 2px);
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    .login-button {
        display: inline-block;
        font-weight: 400;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        user-select: none;
        border: 1px solid transparent;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: 0.25rem;
        color: #f8f9fa;
        background-color: transparent;
        border-color: #f8f9fa;
        transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }
    .login-button:hover{
		color: #212529;
		background-color: #f8f9fa;}

    .login-footer {
        margin-bottom: 0;
        color: #fff;
    }

    .login-footer-link {
        font-weight: bold;
        color: #808080;
    }
</style>

<div class="login-container">
    <h2 class="fw-bold mb-2 login-header">Login</h2>
    <p class="mb-5 login-description">Please enter your email and password!</p>
        <form asp-controller="Login" asp-action="Login" method="post">
            <div class="form-outline mb-4">
                <input type="email" id="typeEmailX" asp-for="Email" class="form-control form-control-lg login-input" />
                <label class="form-label" for="typeEmailX">Email</label>
            </div>
            <div class="form-outline mb-4">
                <input type="password" id="typePasswordX" asp-for="Password" class="form-control form-control-lg login-input" />
                <label class="form-label" for="typePasswordX">Password</label>
            </div>
            <p class="small mb-5 pb-lg-2"><a href="#!" class="login-footer-link">Forgotten password?</a></p>
            <button class="btn btn-outline-light btn-lg px-5 login-button" type="submit">Login</button>
        </form>
    <div class="d-flex justify-content-center text-center mt-4 pt-1">
        <a href="#!" class="text-decoration-none"><i class="fab fa-facebook-f fa-lg"></i></a>
        <a href="#!" class="text-decoration-none"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
        <a href="#!" class="text-decoration-none"><i class="fab fa-google fa-lg"></i></a>
    </div>
    <p class="mb-0 login-footer">Not registered yet? <a href="http://localhost:5000/register" class="fw-bold login-footer-link">Sign Up</a></p>
</div>
    </body>
    </html>
