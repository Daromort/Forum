@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .sidebar-item {
            background-color: #212529;
            color: #fff;
            border: 1px solid #fff;
            border-radius: 5px;
        }

            .sidebar-item:hover {
                background-color: #fff;
                color: #000;
            }

        .chat-container {
            width: 640px;
            height: 520px;
            position: fixed;
            bottom: 0;
            right: 0;
            border: 1px solid #000;
        }

        .chat-window {
            height: 430px;
            overflow-y: auto;
        }

        .sidebar {
            width: 220px;
            height: 100%;
            border-right: 1px solid #000;
        }

        .main-area {
            width: calc(100% - 220px);
            height: 100%;
        }
    </style>
</head>
<body>
    <div class="chat-container d-flex">
        <div class="sidebar">
            <ul class="list-group list-group-flush">
                <li class="list-group-item sidebar-item">Chat 1</li>
                <li class="list-group-item sidebar-item">Chat 2</li>
                <li class="list-group-item sidebar-item">Chat 3</li>
            </ul>
            <input type="text" class="form-control" placeholder="Search">
        </div>
        <div class="main-area d-flex flex-column">
            <div class="chat-header p-2">Chat Header</div>
            <div class="chat-window p-2 flex-grow-1">
                <!-- Chat messages will be here -->
            </div>
            <div class="chat-input p-2">
                <input type="text" class="form-control" placeholder="Type a message">
            </div>
        </div>
    </div>
</body>
</html>

